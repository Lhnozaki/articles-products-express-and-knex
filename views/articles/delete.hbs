<h3>Delete</h3>

<form action="/articles/delete/?_method=DELETE" method="POST">
  <div class="row">
    <div class="twelve columns">
      <select name="title" class="twelve columns">
        <option value="" aria-placeholder="..."></option>
        {{#each articles}}
        <option value="{{title}}">{{title}}</option>
        {{/each}}
      </select><br><br><br>
    </div>
  </div>

  <input class="button" type="submit" value="Delete">
</form>
<div id="errorMsg">
  {{error}}
</div>
<div id="success">
  {{success}}
</div>
<br>
<div>
  <p>
    Use the select bar above to delete an existing article from the articles catalogue.
  </p>
</div>